{
    "name": "phpguard/plugin-behat",
    "description": "Behat Plugin for PhpGuard",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "require": {
        "behat/behat":              "~3.0",
        "phpguard/phpguard":        "0.1.*@dev"
    },
    "require-dev": {
        "phpguard/plugin-phpspec":  "@dev",
        "phpspec/phpspec":          "2.1.*@dev",
        "bossa/phpspec2-expect":    "*"
    },
    "autoload": {
        "psr-4": {
            "PhpGuard\\Plugins\\Behat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpGuard\\Plugins\\Behat\\Acceptance\\": "features/bootstrap"
        }
    }

}
